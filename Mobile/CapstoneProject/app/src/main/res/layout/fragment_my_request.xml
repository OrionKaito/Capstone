<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyRequestFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_home_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:text="My Request"
            android:textColor="@color/colortext"
            android:textSize="@dimen/sp23" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/dp26"
            android:layout_height="@dimen/dp26"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp20"
            android:layout_toLeftOf="@id/img_avatar"
            android:background="@drawable/ic_search_gray_24dp"
            android:visibility="gone" />

        <!--<ImageView-->
        <!--android:id="@+id/img_menu"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="@dimen/dp15"-->
        <!--android:background="@drawable/ic_menu_grey" />-->
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/gray"
            app:civ_border_width="1dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp1"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_empty_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have not sent any requests."
        android:textSize="@dimen/sp22"
        android:layout_marginTop="@dimen/dp20"
        android:textColor="@color/red"
        android:gravity="center"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/list_my_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>